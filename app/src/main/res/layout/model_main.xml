<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/model_sub"
    >
    
    <TextView
        android:id="@+id/tv_compete_return"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="50dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/back"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/tv_competemodename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_compete_return"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="90dp"
        android:text="@string/mode1"
        android:textColor="#ffffff"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/tv_stop"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:background="@drawable/disabled"
        android:gravity="center"
        android:text="@string/stop"
        android:textColor="@color/gray"
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        android:layout_alignStart="@+id/tv_compete_start"
        android:layout_below="@+id/tv_compete_start"
        android:layout_alignEnd="@+id/tv_compete_start"/>

    <TextView
        android:id="@+id/tv_tryagain"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:background="@drawable/disabled"
        android:gravity="center"
        android:text="@string/strcontinue"
        android:textColor="@color/gray"
        android:textSize="30sp"
        android:layout_below="@+id/tv_stop"
        android:layout_alignStart="@+id/tv_stop"
        android:layout_alignEnd="@+id/tv_stop"
        android:layout_marginTop="30dp"
         />

    <TextView
        android:id="@+id/tv_compete_start"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:background="@drawable/pressed"
        android:gravity="center"
        android:text="@string/start"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="120dp"

        android:layout_marginRight="20dp" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/tv_stop"
        android:layout_below="@+id/tv_compete_return"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp" />

    <TextView
        android:id="@+id/tv_end"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:background="@drawable/pressed"
        android:gravity="center"
        android:text="@string/end"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:layout_below="@+id/tv_tryagain"
        android:layout_alignStart="@+id/tv_tryagain"
        android:layout_alignEnd="@+id/tv_tryagain"
        android:layout_marginTop="30dp"/>

</RelativeLayout>
